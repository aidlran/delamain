generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id           String   @id @default(cuid()) @db.VarChar(30)
  email        String   @unique @db.VarChar(255)
  username     String   @unique @db.VarChar(24)
  passwordHash String   @db.VarChar(128)
  name         String?  @db.VarChar(255)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  userKeyPairs UserKeyPair[]
}

model KeyPair {
  id         String   @id @default(cuid()) @db.VarChar(30)
  publicKey  String   @db.Text
  privateKey String   @db.Text
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  userKeyPairs UserKeyPair[]
  tasks        EncryptedData[]
}

model UserKeyPair {
  keyPairId String @db.VarChar(30)
  userId    String @db.VarChar(30)

  keyPair KeyPair @relation(fields: [keyPairId], references: [id])
  user    User    @relation(fields: [userId], references: [id])

  @@id([keyPairId, userId])
  @@index([userId])
}

model EncryptedData {
  id               String @id @default(cuid()) @db.VarChar(30)
  encryptedPayload String @db.Text
  keyPairId        String @db.VarChar(30)

  keyPair KeyPair @relation(fields: [keyPairId], references: [id])

  @@index([keyPairId])
}
