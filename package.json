{
  "name": "delamain",
  "version": "1.0.0-preview.1",
  "description": "Collaborative project management based on the truSync protocol.",
  "license": "AGPL-3.0-only",
  "private": true,
  "author": "Aidan Loughran",
  "repository": "github:aidlran/delamain",
  "bugs": "https://github.com/aidlran/delamain/issues",
  "homepage": "https://github.com/aidlran/delamain#readme",
  "type": "module",
  "workspaces": [
    "lib/trusync/packages/lib-js",
    "lib/trusync/packages/lib-svelte"
  ],
  "scripts": {
    "build": "npm run build:libs && vite build",
    "build:libs": "npm run build --workspaces",
    "format": "prettier --write --plugin prettier-plugin-svelte .",
    "lc": "echo Delamain: $(find src -type f -exec cat {} \\; | wc -l) lines",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "npm run build:libs && svelte-kit sync && conc -kn vite-dev,svelte-check,trusync-js,trusync-svelte \"vite dev\" \"svelte-check --watch --preserveWatchOutput\" \"npm start -w lib/trusync/packages/lib-js\" \"npm start -w lib/trusync/packages/lib-svelte\""
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "argon2": "^0.31.0",
    "jose": "^4.14.4",
    "trusync": "file:lib/trusync/packages/lib-js",
    "trusync-svelte": "file:lib/trusync/packages/lib-svelte"
  },
  "devDependencies": {
    "@openpgp/web-stream-tools": "^0.0.14",
    "@sveltejs/adapter-vercel": "^3.0.0",
    "@sveltejs/kit": "^1.22.6",
    "@types/estree": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-svelte": "^2.32.4",
    "prettier": "^3.0.0",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-svelte": "^3.0.0",
    "prisma": "^5.0.0",
    "svelte": "^4.0.0",
    "svelte-check": "^3.4.6",
    "tslib": "^2.6.0",
    "typescript": "^5.1.0",
    "vite": "^4.4.6"
  }
}
