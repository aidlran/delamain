{
  "name": "luna",
  "version": "1.0.0-preview.1",
  "description": "A productivity assistant.",
  "license": "AGPL-3.0-only",
  "private": true,
  "author": "Aidan Loughran",
  "repository": "github:aidlran/luna",
  "bugs": "https://github.com/aidlran/luna/issues",
  "homepage": "https://github.com/aidlran/luna#readme",
  "type": "module",
  "workspaces": [
    "lib/trusync/packages/lib-js",
    "lib/trusync/packages/lib-svelte"
  ],
  "scripts": {
    "build": "npm run build:libs && vite build",
    "build:libs": "npm run build --workspaces",
    "format": "prettier --write --plugin prettier-plugin-svelte .",
    "lc": "echo LUNA: $(find src -type f -exec cat {} \\; | wc -l) lines",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "npm run build:libs && svelte-kit sync && conc -kn vite-dev,svelte-check,trusync-js,trusync-svelte \"vite dev\" \"svelte-check --watch --preserveWatchOutput\" \"npm start -w lib/trusync/packages/lib-js\" \"npm start -w lib/trusync/packages/lib-svelte\""
  },
  "dependencies": {
    "trusync": "file:lib/trusync/packages/lib-js",
    "trusync-svelte": "file:lib/trusync/packages/lib-svelte"
  },
  "devDependencies": {
    "@sveltejs/kit": "^1.27.3",
    "@types/estree": "^1.0.4",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-svelte": "^2.34.1",
    "prettier": "^3.0.3",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-svelte": "^3.0.3",
    "svelte": "^4.2.2",
    "svelte-check": "^3.5.2",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  }
}
