{
  "name": "luna",
  "version": "0.1.0",
  "description": "A productivity assistant.",
  "license": "AGPL-3.0-only",
  "private": true,
  "author": "Aidan Loughran",
  "repository": "github:aidlran/luna",
  "bugs": "https://github.com/aidlran/luna/issues",
  "homepage": "https://github.com/aidlran/luna#readme",
  "type": "module",
  "workspaces": [
    "lib/librebase/lib/signals",
    "lib/librebase/packages/js",
    "lib/librebase/packages/svelte"
  ],
  "scripts": {
    "build:android": "npm run build:web && cap sync && cap build android",
    "build:web": "npm run build --workspaces && svelte-kit sync && vite build",
    "format": "prettier --write .",
    "lc": "echo LUNA: $(find src -type f -exec cat {} \\; | wc -l) lines",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "conc -k npm:start:*",
    "start:luna:app": "svelte-kit sync && vite dev",
    "start:luna:svelte-check": "svelte-check --watch --preserveWatchOutput",
    "start:librebase": "cd lib/librebase && npm start"
  },
  "devDependencies": {
    "@capacitor/android": "^5.6.0",
    "@capacitor/app": "^5.0.6",
    "@capacitor/cli": "^5.6.0",
    "@capacitor/core": "^5.6.0",
    "@ionic/core": "^7.6.6",
    "@sveltejs/adapter-static": "^3.0.1",
    "@sveltejs/kit": "^2.5.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.2",
    "@types/estree": "^1.0.5",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-svelte": "^2.35.1",
    "ionic-svelte": "^0.5.82",
    "librebase": "file:lib/librebase/packages/js",
    "librebase-svelte": "file:lib/librebase/packages/svelte",
    "prettier": "^3.2.4",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^5.0.0-next.40",
    "svelte-check": "^3.6.3",
    "tslib": "^2.6.2",
    "typescript": "~5.3.3",
    "vite": "^5.0.12"
  }
}
