{
  "name": "luna",
  "version": "0.1.0",
  "private": true,
  "description": "A productivity assistant.",
  "homepage": "https://github.com/aidlran/luna#readme",
  "bugs": "https://github.com/aidlran/luna/issues",
  "repository": "github:aidlran/luna",
  "license": "AGPL-3.0-only",
  "author": "Aidan Loughran",
  "type": "module",
  "workspaces": [
    "lib/astrobase"
  ],
  "scripts": {
    "prebuild": "conc \"npm run build -w lib/astrobase\" \"svelte-kit sync\"",
    "build": "vite build",
    "ci": "npm run build && npm run lint",
    "dev": "vite dev",
    "format": "conc npm:format:*",
    "format:prettier": "prettier --write .",
    "format:sort-package-json": "sort-package-json",
    "lc": "echo LUNA: $(find src -type f -exec cat {} \\; | wc -l) lines",
    "lint": "conc npm:lint:*",
    "lint:eslint": "eslint .",
    "lint:sort-package-json": "sort-package-json --check",
    "preview": "vite preview",
    "start": "svelte-kit sync && conc -k npm:start:*",
    "start:astrobase": "npm start -w lib/astrobase",
    "start:luna:app": "tauri dev",
    "start:luna:svelte-check": "svelte-check --watch --preserveWatchOutput"
  },
  "devDependencies": {
    "@astrobase/core": "file:lib/astrobase",
    "@sveltejs/adapter-static": "^3.0.5",
    "@sveltejs/kit": "^2.7.1",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tauri-apps/api": "^2",
    "@tauri-apps/cli": "^2",
    "@tauri-apps/plugin-shell": "^2",
    "@types/eslint": "^9.6.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "9.1.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.45.1",
    "globals": "^15.11.0",
    "prettier": "3.3.3",
    "prettier-plugin-jsdoc": "1.3.0",
    "prettier-plugin-svelte": "3.2.8",
    "sort-package-json": "2.10.1",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.5",
    "tailwindcss": "^3.4.9",
    "tslib": "^2.8.0",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.10.0",
    "valibot": "^1.0.0-beta.3",
    "vite": "^5.4.9"
  }
}
