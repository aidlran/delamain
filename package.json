{
  "name": "luna",
  "version": "0.1.0",
  "private": true,
  "description": "A productivity assistant.",
  "homepage": "https://github.com/aidlran/luna#readme",
  "bugs": "https://github.com/aidlran/luna/issues",
  "repository": "github:aidlran/luna",
  "license": "AGPL-3.0-only",
  "author": "Aidan Loughran",
  "type": "module",
  "workspaces": [
    "lib/librebase/lib/*",
    "lib/librebase/packages/codec/*",
    "lib/librebase/packages/driver/*",
    "lib/librebase/packages/*"
  ],
  "scripts": {
    "build:android": "npm run build:web && cap sync && cap build android",
    "build:librebase": "cd lib/librebase && npm run build",
    "build:web": "npm run build:librebase && svelte-kit sync && vite build",
    "ci": "npm run build:web && npm run lint",
    "format": "conc npm:format:*",
    "format:prettier": "prettier --write .",
    "format:sort-package-json": "sort-package-json",
    "lc": "echo LUNA: $(find src -type f -exec cat {} \\; | wc -l) lines",
    "lint": "conc npm:lint:*",
    "lint:eslint": "eslint .",
    "lint:sort-package-json": "sort-package-json --check",
    "preview": "vite preview",
    "start": "conc -k npm:start:*",
    "start:librebase": "cd lib/librebase && npm start",
    "start:luna:app": "svelte-kit sync && vite dev",
    "start:luna:svelte-check": "svelte-check --watch --preserveWatchOutput"
  },
  "devDependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/app": "^6.0.0",
    "@capacitor/cli": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@ionic/core": "^7.8.6",
    "@sveltejs/adapter-static": "^3.0.1",
    "@sveltejs/kit": "^2.5.10",
    "@sveltejs/vite-plugin-svelte": "^3.1.0",
    "@types/estree": "^1.0.5",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-svelte": "^2.39.0",
    "ionic-svelte": "^0.5.83",
    "ionicons": "^7.4.0",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.3",
    "sort-package-json": "2.10.0",
    "svelte": "^4.2.17",
    "svelte-check": "^3.7.1",
    "tslib": "^2.6.2",
    "typescript": "~5.4.5",
    "vite": "^5.2.11"
  }
}
