{
  "name": "luna",
  "version": "1.0.0-alpha.1",
  "description": "A productivity assistant.",
  "license": "AGPL-3.0-only",
  "private": true,
  "author": "Aidan Loughran",
  "repository": "github:aidlran/luna",
  "bugs": "https://github.com/aidlran/luna/issues",
  "homepage": "https://github.com/aidlran/luna#readme",
  "type": "module",
  "workspaces": [
    "lib/trusync/packages/js",
    "lib/trusync/packages/svelte"
  ],
  "scripts": {
    "build": "npm run build:android",
    "build:android": "npm run build:web && cap sync && cap build android",
    "build:web": "npm run build:libs && vite build",
    "build:libs": "npm run build --workspaces",
    "format": "prettier --write .",
    "lc": "echo LUNA: $(find src -type f -exec cat {} \\; | wc -l) lines",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "npm run build:libs && svelte-kit sync && conc -kn vite-dev,svelte-check,trusync-js,trusync-svelte \"vite dev\" \"svelte-check --watch --preserveWatchOutput\" \"npm start -w lib/trusync/packages/js\" \"npm start -w lib/trusync/packages/svelte\""
  },
  "devDependencies": {
    "@capacitor/android": "^5.5.1",
    "@capacitor/app": "^5.0.6",
    "@capacitor/cli": "^5.5.1",
    "@capacitor/core": "^5.5.1",
    "@ionic/core": "^7.6.0",
    "@sveltejs/adapter-static": "^2.0.3",
    "@sveltejs/kit": "^1.27.7",
    "@types/estree": "^1.0.5",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-svelte": "^2.35.1",
    "ionic-svelte": "^0.5.82",
    "prettier": "^3.1.0",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.2",
    "trusync": "file:lib/trusync/packages/js",
    "trusync-svelte": "file:lib/trusync/packages/svelte",
    "tslib": "^2.6.2",
    "typescript": "~5.3.3",
    "vite": "^4.5.1"
  }
}
