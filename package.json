{
  "name": "@enclavetech/projex",
  "version": "1.0.0-PREVIEW",
  "private": true,
  "repository": "github:enclavetech/projex",
  "homepage": "https://github.com/enclavetech/projex#readme",
  "engines": {
    "node": "^16.0.0 || ^18.0.0 || ^20.0.0"
  },
  "type": "module",
  "workspaces": [
    "lib/*"
  ],
  "scripts": {
    "build": "concurrently npm:build:lib:* && npm run build:app",
    "build:app": "vite build",
    "build:lib:svelte": "cd lib/svelte && npm run build",
    "build:lib:sveltekit-validator": "cd lib/sveltekit-validator && npm run build",
    "check": "concurrently npm:check:*",
    "check:app": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:lib": "cd lib/svelte && npm run check",
    "check-watch": "concurrently npm:check-watch:*",
    "check-watch:app": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch --preserveWatchOutput",
    "check-watch:lib": "cd lib/svelte && npm run check-watch",
    "dev": "concurrently -k npm:dev:*",
    "dev:app": "concurrently -k npm:check-watch \"vite dev\"",
    "dev:lib:svelte": "cd lib/svelte && npm run dev",
    "dev:lib:sveltekit-validator": "cd lib/sveltekit-validator && npm run dev",
    "format": "concurrently npm:format:*",
    "format:app": "prettier --write .",
    "format:lib:svelte": "cd lib/svelte && npm run format",
    "format:lib:sveltekit-validator": "cd lib/sveltekit-validator && npm run format",
    "lc": "echo Projex: $(find src -type f -exec cat {} \\; | wc -l) lines",
    "lint": "concurrently npm:lint:*",
    "lint:app": "prettier . --check . && eslint .",
    "lint:lib:svelte": "cd lib/svelte && npm run lint",
    "lint:lib:sveltekit-validator": "cd lib/sveltekit-validator && npm run lint",
    "prepare": "npm run prisma:generate && npm run submodule-init",
    "preview": "vite preview",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "start": "npm run dev",
    "start:db": "docker run -d --restart=unless-stopped -p 5432:5432 -v projex-db:/var/lib/postgresql/data -e POSTGRES_USER=projex -e POSTGRES_PASSWORD=projex -e POSTGRES_DB=projex postgres:15-alpine",
    "submodule-init": "git submodule init && cd lib/svelte && npm run submodule-init"
  },
  "dependencies": {
    "@enclavetech/api": "file:lib/svelte/lib/api",
    "@enclavetech/svelte": "file:lib/svelte",
    "@prisma/client": "^5.0.0",
    "argon2": "^0.31.0",
    "class-validator": "^0.14.0",
    "jose": "^4.14.4",
    "sveltekit-validator": "file:lib/sveltekit-validator"
  },
  "devDependencies": {
    "@openpgp/web-stream-tools": "^0.0.14",
    "@sveltejs/adapter-vercel": "^3.0.0",
    "@sveltejs/kit": "~1.22.3",
    "@types/estree": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-deprecation": "^1.5.0",
    "eslint-plugin-svelte": "^2.32.4",
    "prettier": "^3.0.0",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-svelte": "^3.0.0",
    "prisma": "^5.0.0",
    "svelte": "^4.0.0",
    "svelte-check": "^3.4.6",
    "tslib": "^2.6.0",
    "typescript": "^5.1.0",
    "vite": "^4.4.6"
  }
}
